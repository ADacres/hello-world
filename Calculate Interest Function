/* My first project; 
// Java */

import java.util.*;
import java.lang.*;
import java.io.*;

/* public stat void main(String[] args) */
class Ideone
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// Total Purchase Calculation
		System.out.println("The original cost of the item is $9.95");

	double price = 9.95;
	double tax = 7;
	double percentage = 100;
	double salestax = tax/percentage;
	
	double totaltax = salestax * price;
	
	System.out.println("The tax added to the amount is $" + totaltax);
	
	double total = price + totaltax;
	
	System.out.println("Your total is $" + total + "!" + " Thanks for shopping at Adri's, have a nice day :)!");
	

	}
}
